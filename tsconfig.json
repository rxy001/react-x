{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "react/*": ["src/react/*"],
      "shared/*": ["src/shared/*"],
      "react-reconciler/*": ["src/react-reconciler/*"],
      "react-dom/*": ["src/react-dom/*"],
      "scheduler": ["src/scheduler"]
    }
  },
  "include": ["src", "rollup.config.ts"],
  "exclude": []
}
